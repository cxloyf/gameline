<?xml version="1.0" encoding="UTF-8"?>
<!-- params: String source, String category, String gameName, String gameImg, String introUrl, String rank, String outFile -->
<config charset="utf-8">
	<include path="4399_crawl_func.xml"/>

	<var-def name="infoList">
		<call name="crawl-4399-single">
			<call-param name="source"><var name="source" /></call-param>
			<call-param name="category"><var name="category" /></call-param>
			<call-param name="gameName"><var name="gameName" /></call-param>
			<call-param name="gameImg"><var name="gameImg" /></call-param>
			<call-param name="introUrl"><var name="introUrl" /></call-param>
			<call-param name="rank"><var name="rank" /></call-param>
		</call>
	</var-def>
	<file action="write" path="${outFile}" charset="utf-8">
		<template><![CDATA[<?xml version="1.0" encoding="UTF-8"?>]]></template>
		<template><![CDATA[<?xml-stylesheet type="text/xsl" href="4399_results.xsl"?>]]></template>
		<template><![CDATA[<Games>]]></template>
		<var name="infoList" />
		<template><![CDATA[</Games>]]></template>
	</file>
</config>